	<insert id="Contact.insert" parameterClass="Contact">
		INSERT INTO CONTACT (CONTACT_EMAIL, CONTACT_NAME, CONTACT_PHONE)
		VALUES (#name#, #phone#, #email#);
		<selectKey keyProperty="id" resultClass="int">
			select
			last_insert_id() as id
		</selectKey>
	</insert>

